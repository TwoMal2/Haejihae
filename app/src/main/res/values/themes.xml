<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Haejihae" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#C30941</item>
        <item name="colorPrimaryVariant">#FF7870</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--날짜 선택-->
        <item name="android:datePickerDialogTheme">@style/DatePickerDialog</item>

    </style>
    <style name="DatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#FF7870</item>
        <item name="android:textColor">#C30941</item>

    </style>
    <!--팝업배경-->
    <color name="dialogColor">#A6333333</color>

    <!--팝업창 테마-->
    <style name="DialogTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/dialogColor</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
</resources>