<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CancelManualActivity"
    android:orientation="vertical">

    <!--타이틀 바-->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_details_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="20dp"
            android:background="#00FFFFFF"
            android:src="@drawable/ic_baseline_close_red"
            app:tint="#C30941" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해지 신청법"
            android:textColor="#C30941"
            android:textSize="20sp" />

    </androidx.appcompat.widget.Toolbar>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D8D8D8"
        android:elevation="2dp"
        android:paddingBottom="1dp" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_manual"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="넷플릭스"
                android:textColor="#FF7870"
                android:textSize="18sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_manual"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="티빙"
                android:textColor="#FF7870"
                android:textSize="18sp" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_manual"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="웨이브"
                android:textColor="#FF7870"
                android:textSize="18sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_manual"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="왓차"
                android:textColor="#FF7870"
                android:textSize="18sp" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_manual"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="디즈니 플러스"
                android:textColor="#FF7870"
                android:textSize="18sp" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_manual"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="유튜브 프리미엄"
                android:textColor="#FF7870"
                android:textSize="18sp" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_manual"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="멜론"
                android:textColor="#FF7870"
                android:textSize="18sp" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_manual"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="벅스"
                android:textColor="#FF7870"
                android:textSize="18sp" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_manual"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="플로"
                android:textColor="#FF7870"
                android:textSize="18sp" />

        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    </LinearLayout>


</LinearLayout>