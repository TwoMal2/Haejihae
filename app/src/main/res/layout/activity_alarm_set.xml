<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="570dp"
    android:background="#ffffff"
    android:onClick="mOnClick_DatePick"
    android:orientation="vertical"
    android:layout_gravity="center">


    <LinearLayout
        android:id="@+id/popup"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:clickable="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="303dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:background="@drawable/round_corner_pink_textbox"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Name"

            android:layout_width="152dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="Name"

            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#5F1E31"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DDay"
            android:layout_width="112dp"
            android:layout_height="56dp"
            android:text="DDay"
            android:textAlignment="textEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#E62E68"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!--구독일-->
    <LinearLayout
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/subscribe_day"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:text="구독일"
            android:textAlignment="viewStart"

            android:textColor="#5F1E31"
            android:textSize="9pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sday"

            android:layout_width="179dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:text="Date"
            android:textAlignment="textEnd"

            android:textColor="#D53C69"
            android:textSize="9pt"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 다음결제일-->
    <LinearLayout
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/next_payday"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:text="다음 결제일"
            android:textColor="#5F1E31"

            android:textSize="9pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/npday"

            android:layout_width="131dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:text="Date"
            android:textAlignment="textEnd"

            android:textColor="#D53C69"
            android:textSize="9pt"
            android:textStyle="bold" />

    </LinearLayout>

    <!--세로 선-->
    <View
        android:layout_width="287dp"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="#C30941" />

    <!--날짜-->
    <LinearLayout
        android:layout_width="303dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alarm_date"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:text="날짜"
            android:textColor="#5F1E31"

            android:textSize="9pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/adate"

            android:layout_width="164dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:text="1일전"
            android:textAlignment="textEnd"

            android:textColor="#D53C69"
            android:textSize="9pt"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_keyboard_arrow_down"
            app:tint="#C30941" />

    </LinearLayout>

    <!--시간-->
    <LinearLayout
        android:layout_width="303dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alarm_time"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:text="시간"
            android:textColor="#5F1E31"

            android:textSize="9pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/atime"

            android:layout_width="164dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:text="12:00 AM"
            android:textAlignment="textEnd"

            android:textColor="#D53C69"
            android:textSize="9pt"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_keyboard_arrow_down"
            app:tint="#C30941" />

    </LinearLayout>

    <!--다시알림-->

    <LinearLayout
        android:layout_width="302dp"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="98dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:text="다시알림"
            android:textAlignment="textEnd"

            android:textColor="#5F1E31"
            android:textSize="9pt"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/alarm_re"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:textOff="Off"
            android:textOn="On"
            android:textSize="9pt"
            android:textStyle="bold" />


    </LinearLayout>

    <!--다시알림 횟수-->

    <LinearLayout
        android:id="@+id/reAlarms"
        android:layout_width="299dp"
        android:layout_height="28dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/art"

            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"

            android:text="2"
            android:textAlignment="textEnd"

            android:textColor="#D53C69"
            android:textSize="8pt"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_baseline_keyboard_arrow_down"
            app:tint="#C30941" />

        <TextView
            android:id="@+id/alarm_re_time"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="번"
            android:textColor="#5F1E31"

            android:textSize="8pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/arh"

            android:layout_width="67dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="25dp"
            android:text="1시간"
            android:textAlignment="textEnd"

            android:textColor="#D53C69"
            android:textSize="8pt"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_baseline_keyboard_arrow_down"
            app:tint="#C30941" />

        <TextView
            android:id="@+id/alarm_re_hour"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="간격"
            android:textColor="#5F1E31"

            android:textSize="8pt"
            android:textStyle="bold" />


    </LinearLayout>

    <Button
        android:id="@+id/btnClose"
        android:layout_width="112dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_item_add_close"

        android:padding="8dp"

        android:text="설정완료"
        android:textColor="@color/white"
        android:textSize="8pt"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/x_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        app:srcCompat="@drawable/ic_round_close_red"
        android:layout_marginRight="25dp"/>


</LinearLayout>