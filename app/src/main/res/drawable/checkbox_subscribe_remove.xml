<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unchecked -->
    <item android:state_checked="false">
        <shape>
            <stroke android:color="#c30941" android:width="1.5dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Checked -->
    <item android:state_checked="true">
        <layer-list>
            <!-- 배경 -->
            <item>
                <shape>
                    <corners android:radius="4dp" />
                    <solid android:color="#c30941" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_baseline_check"
                android:top="1dp" android:right="1dp" android:bottom="1dp" android:left="1dp" />
        </layer-list>
    </item>
</selector>